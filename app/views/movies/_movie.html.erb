<%=turbo_frame_tag movie do %>
<div>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= movie.title %>
  </p>

  <%= link_to 'Edit this movie', edit_movie_path(movie), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <hr class="mt-6">
</div>
<% end %>
